{
  "name": "esarea",
  "short_name": "esarea",
  "version": "0.0.12",
  "manifest_version": 2,
  "description": "Enjoy (\\( ⁰⊖⁰)/) markdown on any textarea",
  "icons": {
    "48":  "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/jquery-2.1.3.min.js",
        "js/jquery.selection.js",
        "js/esarea.js"
      ],
      "all_frames": true
    }
  ]
}
